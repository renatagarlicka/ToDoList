@using Microsoft.AspNetCore.Identity
@model ToDoListItem

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Utwórz listę rzeczy do zrobienia</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <input type="hidden" asp-for="UserId" class="form-control" value="GetUserId(User)" />
            <input type="hidden" asp-for="User" class="form-control" value="GetUser(User)" />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea id="mytextarea" asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary" form-control>Stwórz</button>
            </div>
            <div class="col-6">
                <a asp-controller="ToDo" asp-action="Index" class="btn btn-secondary" form-control>Powrót</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
        <script>
            tinymce.init({
                selector: '#mytextarea'
            });
        </script>
        <partial name="_ValidationScriptsPartial" />
    }
}

