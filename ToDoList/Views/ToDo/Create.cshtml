@model ToDoListItem

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="perfectColorText">Utwórz listę rzeczy do zrobienia</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>       
        <div class="mb-3">
            <label class="perfectColorText" asp-for="Name"></label>
            <input asp-for="Name" class="perfectColorText form-control" />
            <span asp-validation-for="Name" class="perfectColorText"></span>
        </div>
        <div class="mb-3">
            <label class="perfectColorText"  asp-for="Description"></label>
            <textarea class="perfectColorText" id="mytextarea" asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description"></span>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn perfectColorButton">Stwórz</button>
            </div>
            <div class="col-6">
                <a asp-controller="ToDo" asp-action="Index" class="btn perfectColorButton">Powrót</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <script src="https://cdn.tiny.cloud/1/ogriug3tq7xam756c27ngkjxyb31yy80a9tku1vxhr6qptq1/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
        <script>
            tinymce.init({
                selector: 'textarea',
                plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
                toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
            });
        </script>
        <partial name="_ValidationScriptsPartial" />
    }
}

