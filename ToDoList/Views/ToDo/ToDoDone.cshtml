@model List<ToDoListItem>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="perfectColorText">
                Lista rzeczy zrobionych
            </h2>
        </div>
        <table class="table table-bordered table-striped perfectColorText">
            <thead>
                <tr>
                    <th class="perfectColorText">
                        Tytuł
                    </th>
                    <th class="perfectColorText">
                        Lista rzeczy zrobionych
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var obj in Model)
                    {
                    <td>@obj.Name</td>
                    <td>@obj.Description</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="ToDo" asp-action="Back" asp-route-id="@obj.Id" class="btn perfectColorButton mx-2">
                                <i class="bi bi-pencil-square"></i> Przywróć
                            </a>                           
                        </div>
                    </td>
                    }
                }
                else
                {
                    <div>Brak wykonanych zadań. Do dzieła!</div>
                }
            </tbody>
        </table>
    </div>
