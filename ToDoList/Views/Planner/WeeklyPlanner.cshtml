@model List<Planner>
@{
    ViewData["Title"] = "Tygodniowy Planner";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="perfectColorText">
                Tygodniowy planer
            </h2>
        </div>
        <div class="col-6">
            <a asp-controller="Planner" asp-action="Create" class="btn perfectColorButton">
                <i class="bi bi-plus"></i> Utwóż nowy
            </a>
        </div>
    </div>

    <div>
        @if (Model != null)
        {
            @foreach (var obj in Model)
            {
                <div class="card cardOptions">
                    <div class="card-header">@obj.Name</div>
                    <div class="card-body">
                        <h4 class="card-title">@obj.Type</h4>
                        @* todo link to done planner  *@
                    </div>
                </div>
            }
        }
        else
        {
            <div>Stwórz tygodniowy planer.</div>
        }
    </div>
</div>

