@{
    ViewData["Title"] = "Organisation Helper - Planner";
}

<div class="text-center">

    <h1>Jaki planer chcesz zobaczyć?</h1>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3  col-md-6 d-flex justify-content-center">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><a class="nav-link linkColor" asp-controller="Planner" asp-action="DailyPlanner">Stwórz dzienny planer</a></h5>
                        <p class="card-text">Stwórz swój własny dzienny organizer</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-3  col-md-6 d-flex justify-content-center">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><a class="nav-link linkColor" asp-controller="Planner" asp-action="WeeklyPlanner">Stwórz tygodniowy planer</a></h5>
                        <p class="card-text">Stwórz swój własny tygodniowy organizer</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3  col-md-6 d-flex justify-content-center">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><a class="nav-link linkColor" asp-controller="Planner" asp-action="MonthlyPlanner">Stwórz miesięczny planer</a></h5>
                        <p class="card-text">Stwórz swój własny miesięczny organizer</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>